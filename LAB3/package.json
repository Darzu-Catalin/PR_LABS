{
  "name": "ps4",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^22.12.x"
  },
  "scripts": {
    "compile": "tsc",
    "start": "tsc && node --require source-map-support/register dist/src/server.js",
    "dev": "concurrently \"npm run build:watch\" \"npm run start:dev\"",
    "start:dev": "tsc && node --require source-map-support/register dist/src/server.js 8080 boards/perfect.txt",
    "build": "npm run compile && npm run build:frontend",
    "build:frontend": "vite build",
    "build:watch": "vite build --watch",
    "simulation": "tsc && node --require source-map-support/register dist/src/simulation.js",
    "lint": "tsc && eslint",
    "test": "tsc || exit ; eslint ; mocha --require source-map-support/register dist/test",
    "coverage": "c8 npm test"
  },
  "mocha": {
    "reporter": "spec",
    "exit": true
  },
  "c8": {
    "extension": [
      ".js"
    ],
    "exclude": [
      "coverage/"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "all": true
  },
  "dependencies": {
    "express": "^5.0.1",
    "http-status-codes": "^2.3.0",
    "source-map-support": "^0.5.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.7",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "c8": "^10.1.3",
    "eslint": "^9.20.1",
    "eslint-formatter-checkstyle": "^8.40.0",
    "eslint-plugin-jsdoc": "^50.6.3",
    "mocha": "^11.0.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1",
    "vite": "^5.0.10",
    "concurrently": "^8.2.2"
  }
}
